<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    Menu
  </title>
  <style>
    .h2 {
      font-size: x-large;
      font-weight: bolder;
    }
    .h3 {
      font-size: larger;
      font-weight: bolder;
    }
  </style>
</head>
<body>
    
    <%- include('./partials/nav') %>

  <h1>Full Menu</h1>
  
  <h2>Mains</h2>
  <ul>
    <% locals.menu.forEach(item => { %>
      <% if(item.category==="mains"){ %>
        <li>
          <div>
            <h3><%= item.name %></h3>
            <h4 style="font-weight: normal;"><strong>Price:</strong> <%= item.price %></h4>
            <h4 style="font-weight: normal;"><strong>Rating:</strong> <%= item.rating %></h4>
            <h4 style="font-weight: normal;"><strong>Details:</strong> <%= item.details %></h4>
          </div>
        </li>
      <% } %>
    <% }) %>
  </ul>
  
  <h2>Desserts</h2>
  <ul>
    <% locals.menu.forEach(item => { %>
      <% if(item.category==="desserts"){ %>
        <li>
          <div>
            <h3><%= item.name %></h3>
            <h4 style="font-weight: normal;"><strong>Price:</strong> <%= item.price %></h4>
            <h4 style="font-weight: normal;"><strong>Rating:</strong> <%= item.rating %></h4>
            <h4 style="font-weight: normal;"><strong>Details:</strong> <%= item.details %></h4>
          </div>
        </li>
      <% } %>
    <% }) %>
  </ul>
  
  <h2>Sides</h2>
  <ul>
    <% locals.menu.forEach(item => { %>
      <% if(item.category==="sides"){ %>
        <li>
          <div>
            <h3><%= item.name %></h3>
            <h4 style="font-weight: normal;"><strong>Price:</strong> <%= item.price %></h4>
            <h4 style="font-weight: normal;"><strong>Rating:</strong> <%= item.rating %></h4>
            <h4 style="font-weight: normal;"><strong>Details:</strong> <%= item.details %></h4>
          </div>
        </li>
      <% } %>
    <% }) %>
  </ul>
  
  

</body>
</html>
